<?xml version="1.0" encoding="UTF-8"?>
<dynaForm
  sqlConnection=""
  menu="dynaforms/dynaforms_Options"
  width="100%"
  rowsPerPage="4"
>

<DYN_UID type="hidden" showInTable="0"/>

<DYN_TITLE type="text" colWidth="350"  titleAlign="left" align="left" dataCompareField="T.CON_VALUE" dataCompareType="contains">
  <en>Dynaform</en>
  <es>Dynaform</es>
</DYN_TITLE>

<EDIT type="link" colWidth="40" value="@G::LoadTranslation(ID_EDIT)" link="#" onclick="dynaformEdit(@QDYN_UID);return false;"/>

<DELETE type="link" colWidth="40" value="@G::LoadTranslation(ID_DELETE)" link="#" onclick="dynaformDelete(@QDYN_UID);return false;"/>

<!-- FILTER FORM -->
<SEARCH type="button" onclick="pagedTableFilter( this.form );" showInTable="0">
  <en>Apply Filter</en>
  <es>Filtrar</es>
</SEARCH>

<PAGED_TABLE_ID type="private" showInTable="0"/>

<JSFILTER type="javascript" replaceTags="1" showInTable="0">
function pagedTableFilter( form ) {
  @#PAGED_TABLE_ID.doFilter( form );
}
</JSFILTER>

</dynaForm>