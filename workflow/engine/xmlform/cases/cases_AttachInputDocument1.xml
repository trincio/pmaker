<TYPE_LABEL type="private"/>

<TITLE1 type="title">
  <en>Attach Input document</en>
  <es>Documento requerido</es>
</TITLE1>

<INP_DOC_TITLE type="caption">
  <en>Title</en>
  <es>Título</es>
</INP_DOC_TITLE>

<INP_DOC_DESCRIPTION type="caption">
  <en>Description</en>
  <es>Descripción</es>
</INP_DOC_DESCRIPTION>

<INP_DOC_FORM_NEEDED type="dropdown" colWidth="80" titleAlign="left" align="left" mode="view">
  <en>Document Type
  <option name ='VIRTUAL'>Digital</option>
  <option name ='REAL'>Printed</option>
  <option name ='VREAL'>Digital/Printed</option>
  </en>
  <es>Tipo
  <option name ='VIRTUAL'>Impreso</option>
  <option name ='REAL'>Digital</option>
  <option name ='VREAL'>Digital/Impreso</option>
  </es>
</INP_DOC_FORM_NEEDED>

<INP_DOC_ORIGINAL type="dropdown" colWidth="80" titleAlign="left" align="left" mode="view">
  <en>Format
  <option name ='ORIGINAL'>Original</option>
  <option name ='COPYLEGAL'>Legal Copy</option>
  <option name ='COPY'>Copy</option>
  </en>
  <es>Formato
  <option name ='ORIGINAL'>Original</option>
  <option name ='COPY'>Copia</option>
  <option name ='COPYLEGAL'>Copia legalizada</option>
  </es>
</INP_DOC_ORIGINAL>

